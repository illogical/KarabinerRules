{
  "description": "Caps as app launcher + Tap for App-Specific Mode",
  "manipulators": [
    //
    // 1. CAPS: dual-role key
    //    - Held: sets caps_held = 1 while down (for Caps+letter combos)
    //    - Tapped in VSCode: toggles vscode_mode 0 <-> 1
    //    - Tapped elsewhere: sends Escape
    //

    {
      "type": "basic",
      "from": {
        "key_code": "caps_lock",
        "modifiers": {
          "optional": ["any"]
        }
      },
      "conditions": [
        {
          "type": "frontmost_application_if",
          "bundle_identifiers": [
            "^com\\.microsoft\\.VSCode$"
          ]
        },
        {
          "type": "variable_if",
          "name": "vscode_mode",
          "value": 0
        }
      ],
      "to": [
        {
          "set_variable": {
            "name": "caps_held",
            "value": 1,
            "key_up_value": 0
          }
        }
      ],
      "to_if_alone": [
        {
          "set_variable": {
            "name": "vscode_mode",
            "value": 1
          }
        }
      ]
    },

    {
      "type": "basic",
      "from": {
        "key_code": "caps_lock",
        "modifiers": {
          "optional": ["any"]
        }
      },
      "conditions": [
        {
          "type": "frontmost_application_if",
          "bundle_identifiers": [
            "^com\\.microsoft\\.VSCode$"
          ]
        },
        {
          "type": "variable_if",
          "name": "vscode_mode",
          "value": 1
        }
      ],
      "to": [
        {
          "set_variable": {
            "name": "caps_held",
            "value": 1,
            "key_up_value": 0
          }
        }
      ],
      "to_if_alone": [
        {
          "set_variable": {
            "name": "vscode_mode",
            "value": 0
          }
        }
      ]
    },

    {
      "type": "basic",
      "from": {
        "key_code": "caps_lock",
        "modifiers": {
          "optional": ["any"]
        }
      },
      "conditions": [
        {
          "type": "frontmost_application_unless",
          "bundle_identifiers": [
            "^com\\.microsoft\\.VSCode$"
          ]
        }
      ],
      "to": [
        {
          "set_variable": {
            "name": "caps_held",
            "value": 1,
            "key_up_value": 0
          }
        }
      ],
      "to_if_alone": [
        {
          "key_code": "escape"
        }
      ]
    },

    //
    // 2. Caps+letter app launchers
    //    Requires caps_held = 1
    //

    {
      "type": "basic",
      "from": {
        "key_code": "b",
        "modifiers": {
          "optional": ["any"]
        }
      },
      "conditions": [
        {
          "type": "variable_if",
          "name": "caps_held",
          "value": 1
        }
      ],
      "to": [
        {
          "software_function": {
            "open_application": {
              "bundle_identifier": "com.vivaldi.Vivaldi"
            }
          }
        }
      ]
    },
    {
      "type": "basic",
      "from": {
        "key_code": "e",
        "modifiers": {
          "optional": ["any"]
        }
      },
      "conditions": [
        {
          "type": "variable_if",
          "name": "caps_held",
          "value": 1
        }
      ],
      "to": [
        {
          "software_function": {
            "open_application": {
              "bundle_identifier": "com.evernote.Evernote"
            }
          }
        }
      ]
    },
    {
      "type": "basic",
      "from": {
        "key_code": "n",
        "modifiers": {
          "optional": ["any"]
        }
      },
      "conditions": [
        {
          "type": "variable_if",
          "name": "caps_held",
          "value": 1
        }
      ],
      "to": [
        {
          "software_function": {
            "open_application": {
              "bundle_identifier": "notion.id"
            }
          }
        }
      ]
    },
    {
      "type": "basic",
      "from": {
        "key_code": "t",
        "modifiers": {
          "optional": ["any"]
        }
      },
      "conditions": [
        {
          "type": "variable_if",
          "name": "caps_held",
          "value": 1
        }
      ],
      "to": [
        {
          "software_function": {
            "open_application": {
              "bundle_identifier": "com.apple.Terminal"
            }
          }
        }
      ]
    },
    {
      "type": "basic",
      "from": {
        "key_code": "v",
        "modifiers": {
          "optional": ["any"]
        }
      },
      "conditions": [
        {
          "type": "variable_if",
          "name": "caps_held",
          "value": 1
        }
      ],
      "to": [
        {
          "software_function": {
            "open_application": {
              "bundle_identifier": "com.microsoft.VSCode"
            }
          }
        }
      ]
    },

    //
    // 3. VSCode mode keybindings (vscode_mode == 1, only in VSCode)
    //

    {
      "type": "basic",
      "from": {
        "key_code": "left_arrow",
        "modifiers": {
          "optional": ["any"]
        }
      },
      "conditions": [
        {
          "type": "frontmost_application_if",
          "bundle_identifiers": [
            "^com\\.microsoft\\.VSCode$"
          ]
        },
        {
          "type": "variable_if",
          "name": "vscode_mode",
          "value": 1
        }
      ],
      "to": [
        {
          "key_code": "hyphen",
          "modifiers": ["control"]
        }
      ]
    },
    {
      "type": "basic",
      "from": {
        "key_code": "right_arrow",
        "modifiers": {
          "optional": ["any"]
        }
      },
      "conditions": [
        {
          "type": "frontmost_application_if",
          "bundle_identifiers": [
            "^com\\.microsoft\\.VSCode$"
          ]
        },
        {
          "type": "variable_if",
          "name": "vscode_mode",
          "value": 1
        }
      ],
      "to": [
        {
          "key_code": "hyphen",
          "modifiers": ["control", "shift"]
        }
      ]
    },
    {
      "type": "basic",
      "from": {
        "key_code": "e",
        "modifiers": {
          "optional": ["any"]
        }
      },
      "conditions": [
        {
          "type": "frontmost_application_if",
          "bundle_identifiers": [
            "^com\\.microsoft\\.VSCode$"
          ]
        },
        {
          "type": "variable_if",
          "name": "vscode_mode",
          "value": 1
        }
      ],
      "to": [
        {
          "key_code": "e",
          "modifiers": ["command", "shift"]
        }
      ]
    },
    {
      "type": "basic",
      "from": {
        "key_code": "f",
        "modifiers": {
          "optional": ["any"]
        }
      },
      "conditions": [
        {
          "type": "frontmost_application_if",
          "bundle_identifiers": [
            "^com\\.microsoft\\.VSCode$"
          ]
        },
        {
          "type": "variable_if",
          "name": "vscode_mode",
          "value": 1
        }
      ],
      "to": [
        {
          "key_code": "p",
          "modifiers": ["command"]
        },
        {
          "set_variable": {
            "name": "vscode_mode",
            "value": 0
          }
        }
      ]
    },
    {
      "type": "basic",
      "from": {
        "key_code": "g",
        "modifiers": {
          "optional": ["any"]
        }
      },
      "conditions": [
        {
          "type": "frontmost_application_if",
          "bundle_identifiers": [
            "^com\\.microsoft\\.VSCode$"
          ]
        },
        {
          "type": "variable_if",
          "name": "vscode_mode",
          "value": 1
        }
      ],
      "to": [
        {
          "key_code": "g",
          "modifiers": ["control", "shift"]
        }
      ]
    },
    {
      "type": "basic",
      "from": {
        "key_code": "s",
        "modifiers": {
          "optional": ["any"]
        }
      },
      "conditions": [
        {
          "type": "frontmost_application_if",
          "bundle_identifiers": [
            "^com\\.microsoft\\.VSCode$"
          ]
        },
        {
          "type": "variable_if",
          "name": "vscode_mode",
          "value": 1
        }
      ],
      "to": [
        {
          "key_code": "p",
          "modifiers": ["command", "shift"]
        },
        {
          "set_variable": {
            "name": "vscode_mode",
            "value": 0
          }
        }
      ]
    },

    //
    // 4. Escape exits VSCode mode (and still sends real Escape)
    //

    {
      "type": "basic",
      "from": {
        "key_code": "escape",
        "modifiers": {
          "optional": ["any"]
        }
      },
      "conditions": [
        {
          "type": "frontmost_application_if",
          "bundle_identifiers": [
            "^com\\.microsoft\\.VSCode$"
          ]
        },
        {
          "type": "variable_if",
          "name": "vscode_mode",
          "value": 1
        }
      ],
      "to": [
        {
          "set_variable": {
            "name": "vscode_mode",
            "value": 0
          }
        },
        {
          "key_code": "escape"
        }
      ]
    }
  ]
}